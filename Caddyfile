{
    # global options
    admin off
    persist_config off
    auto_https off
    log {
        format json
    }
    servers {
        trusted_proxies static private_ranges
    }
}

:{$PORT} {
    log {
        format json
    }

    root * .web/_static

    encode gzip

    file_server

    try_files {path} {path}.html

    handle_path /backend/* {
        reverse_proxy 127.0.0.1:8000
    }

    handle_errors {
        rewrite * /{err.status_code}.html
        file_server
    }
}
