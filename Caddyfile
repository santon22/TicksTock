{
	admin off
	persist_config off
	auto_https off
	log {
		format json
	}
	servers {
		trusted_proxies static private_ranges
	}
}

:{$PORT} {
	log {
		format json
	}

	encode gzip

	@backend_routes path /_event/* /ping /_upload /_upload/*

	handle @backend_routes {
		reverse_proxy http://127.0.0.1:8000
	}

	root * /app/.web/build/client

	handle {
		try_files {path} {path}/ /index.html
		file_server
	}
}
